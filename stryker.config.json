{
    "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
    "packageManager": "npm",
    "reporters": ["html", "clear-text", "progress"],
    "testRunner": "jest",
    "coverageAnalysis": "perTest",
    "mutate": ["src/**/*.ts", "!src/**/*.spec.ts", "!src/bookshelf-error.ts"],
    "ignorePatterns": [".*/**/*", "reports/**/*", "src/**/*.stories.ts", "src/component/**/*"],
    "thresholds": {
        "high": 100,
        "low": 90,
        "break": 80
    },
    "checkers": ["typescript"],
    "tsconfigFile": "tsconfig.json",
    "typescriptChecker": {
        "prioritizePerformanceOverAccuracy": true
    }
}
