{
    "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
    "packageManager": "npm",
    "reporters": ["html", "clear-text", "progress"],
    "testRunner": "jest",
    "coverageAnalysis": "perTest",
    "mutate": [
        "src/**/*.ts",
        "!src/**/*.spec.ts",
        "!src/default-book-sort-options.ts",
        "!src/bookshelf-error.ts",
        "!src/component/book-details/*",
        "!src/component/button/*",
        "!src/component/gallery/*",
        "!src/component/reading-progress-bar-chart/*",
        "!src/component/statistics/**/*",
        "!src/support/*"
    ],
    "ignorePatterns": [".*/**/*", "reports/**/*", "src/**/*.stories.ts", "src/obsidian/**/*"],
    "thresholds": {
        "high": 100,
        "low": 90,
        "break": 80
    },
    "checkers": ["typescript"],
    "tsconfigFile": "tsconfig.json",
    "typescriptChecker": {
        "prioritizePerformanceOverAccuracy": true
    }
}
